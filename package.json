{
  "name": "use-chrome",
  "version": "0.0.0",
  "description": "Modern React hooks for Chrome Extensions",
  "author": "Antoine Kingue <contact@antoinek.fr>",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./storage": {
      "types": "./dist/hooks/storage.d.ts",
      "require": "./dist/hooks/storage.js",
      "import": "./dist/hooks/storage.mjs"
    },
    "./tabs": {
      "types": "./dist/hooks/tabs.d.ts",
      "require": "./dist/hooks/tabs.js",
      "import": "./dist/hooks/tabs.mjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "coverage": "vitest run --coverage",
    "prepare": "pnpm run build",
    "release": "pnpm run build && changeset publish",
    "clean": "rm -rf dist/",
    "build:test": "echo 'ðŸ—ï¸  Building test extension...' && tsx scripts/build-test.ts",
    "test": "pnpm clean && pnpm build:test && echo 'ðŸ§ª Running tests...' && playwright test",
    "test:ui": "pnpm clean && pnpm build:test && playwright test --ui",
    "test:debug": "pnpm clean && pnpm build:test && playwright test --debug",
    "test:report": "playwright show-report"
  },
  "peerDependencies": {
    "@types/chrome": ">=0.0.200",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.48.2",
    "@testing-library/react": "^14.2.1",
    "@types/chrome": "^0.0.258",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.2.0",
    "happy-dom": "^13.3.8",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "tsup": "^8.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vitest": "^1.2.2"
  },
  "keywords": [
    "react",
    "chrome",
    "extension",
    "hooks",
    "typescript"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
